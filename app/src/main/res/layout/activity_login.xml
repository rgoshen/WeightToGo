<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_secondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="match_parent">

        <!-- Header Section with Gradient Background -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="@dimen/header_height_login"
            android:background="@drawable/bg_gradient_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/spacing_xxl"
            android:src="@mipmap/ic_launcher_foreground"
            android:contentDescription="@string/cd_app_logo"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_small"
            app:layout_constraintTop_toTopOf="@id/headerBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_standard"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_display"
            android:textColor="@color/text_on_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/appLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/appTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/app_tagline"
            android:textSize="@dimen/text_size_body"
            android:textColor="@color/text_on_primary"
            android:alpha="0.9"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Auth Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/authCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_standard"
            android:layout_marginTop="-40dp"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="@dimen/elevation_raised"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintTop_toBottomOf="@id/headerBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xl">

                <!-- Tab Toggle (Sign In / Create Account) -->
                <LinearLayout
                    android:id="@+id/authToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/surface_variant"
                    android:padding="@dimen/spacing_micro"
                    android:layout_marginBottom="@dimen/spacing_xl">

                    <!-- Sign In Tab (Active) -->
                    <TextView
                        android:id="@+id/tabSignIn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/spacing_medium"
                        android:gravity="center"
                        android:text="@string/tab_sign_in"
                        android:textSize="@dimen/text_size_body"
                        android:textStyle="bold"
                        android:textColor="@color/primary_teal"
                        android:background="@color/background_primary" />

                    <!-- Create Account Tab -->
                    <TextView
                        android:id="@+id/tabCreateAccount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/spacing_medium"
                        android:gravity="center"
                        android:text="@string/tab_create_account"
                        android:textSize="@dimen/text_size_body"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:background="@android:color/transparent" />

                </LinearLayout>

                <!-- Username Input Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameInputLayout"
                    style="@style/Widget.WeightToGo.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_username"
                    app:startIconDrawable="@drawable/ic_profile"
                    app:startIconTint="@color/icon_secondary"
                    app:hintEnabled="true"
                    app:expandedHintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@id/passwordEditText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input Field (CRITICAL: inputType="textPassword" for dots) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    style="@style/Widget.WeightToGo.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_standard"
                    android:hint="@string/hint_password"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/icon_secondary"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/icon_secondary"
                    app:hintEnabled="true"
                    app:expandedHintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:imeOptions="actionDone" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Forgot Password Link -->
                <TextView
                    android:id="@+id/forgotPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:minHeight="@dimen/touch_target_min"
                    android:gravity="center_vertical"
                    android:text="@string/forgot_password"
                    android:textSize="@dimen/text_size_body"
                    android:textColor="@color/primary_teal"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="@dimen/spacing_small" />

                <!-- Sign In Button (Primary) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signInButton"
                    style="@style/Widget.WeightToGo.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_standard"
                    android:layout_marginTop="@dimen/spacing_xl"
                    android:text="@string/btn_sign_in"
                    app:cornerRadius="@dimen/corner_radius_button" />

                <!-- Divider with "or" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_xl"
                    android:layout_marginBottom="@dimen/spacing_xl">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/spacing_standard"
                        android:text="@string/or_continue_with"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_secondary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider" />

                </LinearLayout>

                <!-- Create Account Button (Secondary/Outlined) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createAccountButton"
                    style="@style/Widget.WeightToGo.Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_standard"
                    android:text="@string/btn_create_account"
                    app:cornerRadius="@dimen/corner_radius_button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Terms and Privacy Footer -->
        <TextView
            android:id="@+id/termsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_xxl"
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_marginBottom="@dimen/spacing_standard"
            android:gravity="center"
            android:text="@string/terms_text"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/authCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>