<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_set_goal_title"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_large" />

        <!-- Current Weight Display Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/divider"
            app:cardBackgroundColor="@color/surface_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_weight"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <!-- Current Weight Value -->
                <TextView
                    android:id="@+id/text_current_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="172.0 lbs"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Goal Weight Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_goal_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:hint="@string/hint_goal_weight"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/primary_teal"
            app:hintTextColor="@color/primary_teal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_goal_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Unit Toggle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_large">

            <TextView
                android:id="@+id/unit_lbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="72dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_unit_toggle_active"
                android:paddingHorizontal="@dimen/spacing_large"
                android:paddingVertical="10dp"
                android:text="@string/lbs_unit"
                android:textColor="@color/text_on_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_unit_lbs" />

            <TextView
                android:id="@+id/unit_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="72dp"
                android:background="@drawable/bg_unit_toggle_inactive"
                android:paddingHorizontal="@dimen/spacing_large"
                android:paddingVertical="10dp"
                android:text="@string/kg_unit"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_unit_kg" />

        </LinearLayout>

        <!-- Optional Target Date Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_target_date_optional"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp" />

        <!-- Target Date Picker Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_target_date"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_select_target_date"
            android:textColor="@color/primary_teal"
            app:strokeColor="@color/primary_teal"
            app:cornerRadius="12dp"
            android:layout_marginBottom="@dimen/spacing_large" />

        <!-- Selected Target Date Display -->
        <TextView
            android:id="@+id/text_selected_target_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_target_date_selected"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_large"
            android:visibility="gone" />

        <!-- Dialog Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="@dimen/spacing_small" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:backgroundTint="@color/primary_teal"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
