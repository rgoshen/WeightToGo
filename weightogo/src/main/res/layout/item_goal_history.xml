<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goal_history_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_card"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_standard">

        <!-- Achievement Badge (visible if achieved) -->
        <ImageView
            android:id="@+id/achievement_badge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_achievement"
            android:background="@drawable/bg_achievement_badge"
            android:padding="8dp"
            android:contentDescription="@string/cd_achievement_badge"
            android:visibility="gone"
            app:tint="@color/accent_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- Goal Details -->
        <LinearLayout
            android:id="@+id/goal_details_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            app:layout_constraintStart_toEndOf="@id/achievement_badge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Goal Weight Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_micro">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_colon"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_goal_weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_micro"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    tools:text="150.0 lbs" />

                <!-- Achieved Label -->
                <TextView
                    android:id="@+id/label_achieved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="@string/achieved"
                    android:textColor="@color/accent_green"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Stats Row (Lost + Duration) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_micro">

                <!-- Lbs Lost -->
                <TextView
                    android:id="@+id/text_lbs_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    tools:text="Lost 30 lbs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small" />

                <!-- Duration -->
                <TextView
                    android:id="@+id/text_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    tools:text="45 days" />

            </LinearLayout>

            <!-- Dates Row -->
            <TextView
                android:id="@+id/text_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                tools:text="Jan 1 – Feb 15, 2025" />

            <!-- Target Date (if set) -->
            <TextView
                android:id="@+id/text_target_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_micro"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"
                tools:text="Target: Feb 20, 2025"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
